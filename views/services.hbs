<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../css/reset.css">
    <link rel="stylesheet" href="../css/fonts.css">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/elementStyles.css">
    <link rel="stylesheet" href="../css/service.css">
</head>

<body>
    {{> header}}

    <main>
        <div class="container">
            <div class="main__inenr">
                <h1>Все услуги</h1>
                <ul class="services">
                    {{#each service}}

                    <li onclick="{openService({{this.idService}})}">
                        <img src="{{this.Image}}">
                        <span>{{this.Title}}</span>
                    </li>

                    {{/each}}
                </ul>
            </div>
        </div>
    </main>
</body>

<script>
    const openService = (id) => {
        //window.location.href = `https://server-bp9a.onrender.com/service/${id}`;
        window.location.href = `http://localhost:4000/service/${id}`;
    }
</script>

</html>